[colors] 
transparent = #0000
black   = #000

bg0_h   = #1d2021
bg0     = #282828
bg0_s   = #32302f
bg1     = #3c3836
bg2     = #504945
bg3     = #665c54
bg4     = #7c6f64

gray    = #a89984
gray2   = #928374

red     = #cc241d
red2    = #fb4934

green   = #98971a
green2  = #b8bb26

yellow  = #d79921
yellow2 = #fabd2f

blue    = #458588
blue2   = #83a598

purple  = #b16286
purple2 = #d3869b

aqua    = #689d6a
aqua2   = #8ec07c

orange  = #d65d0e
orange2 = #fe8019

fg0     = #fbf1c7
fg1     = #ebdbb2
fg2     = #d5c4a1
fg3     = #bdae93
fg4     = #a89984

background = ${colors.bg0}
background-alt =  ${colors.bg0_s}
foreground = ${colors.fg1}
foreground-alt= ${color.fg4}


[bar/root]
background = ${colors.background}
foreground = ${colors.foreground}

width = 100%
height = 40 
radius = 20 
fixed-center = true
; bottom = true
override-redirect = false
border-left = 10 
border-right = 10  
border-top = 10 
; border-bottom = 10
;border-size = 25
padding-left = 4 
padding-right = 4
; padding-top = 4
; padding-bottom = 4

font-0 = Hack Nerd Font Mono:style=Bold:pixelsize=10

cursor-click = pointer
cursor-scroll = ns-resize

module-margin-left = 1 
module-margin-right = 1
modules-center = date 
modules-left = i3
modules-right = cpu memory filesystem temperature backlight bluetooth pulseaudio wlan eth battery
separator = /


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-foreground = ${colors.fg0}
label-mode-background = ${colors.bg0}
label-mode-padding = 1

label-focused = %index%
label-focused-foreground = ${colors.fg0}
label-focused-background = ${colors.bg0} 
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.fg4}
label-unfocused-background = ${colors.bg0}
label-unfocused-padding = 1

label-visible = %index%
label-visible-foreground = ${colors.fg0}
label-visible-background = ${colors.bg0}
label-visible-padding = 1

label-urgent = !%index%
label-urgent-foreground = ${colors.red2}
label-urgent-background = ${colors.bg0}
label-urgent-padding = 1


[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth.sh
interval = 2
click-left = exec ~/.config/polybar/scripts/toggle_bluetooth.sh
click-right = exec blueman-manager


[module/backlight]
type = internal/backlight
card = nv_backlight
format = light <label>
label = %percentage%%
format-foreground = ${colors.aqua2}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${colors.yellow2}
format-foreground = ${colors.yellow2}
label = %percentage%%


[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem "
format-prefix-foreground = ${colors.blue2}
format-foreground = ${colors.blue2}
label = %percentage_used%%


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =fs %percentage_used%%
label-mounted-foreground = ${colors.orange2}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.fg4}


[module/wlan]
type = internal/network
interface = wlan0
interval = 2

format-packetloss = !<label-connected>
format-packetloss-foreground = ${colors.red2}

format-connected = <label-connected>
label-connected = wlan
label-connected-foreground = ${colors.blue2}

format-disconnected =
format-disconnected-foreground = ${colors.fg4}


[module/eth]
type = internal/network
interface = eno1
interval = 2
format-connected-prefix-foreground = ${colors.aqua2}

label-connected = eth  
format-connected-foreground = ${colors.aqua2}

label-disconnected =   
format-disconnected-foreground = ${colors.fg4}

[module/date]
type = internal/date
interval = 1

date = %A / %d %B /
time = %H:%M

date-alt = %A / %d %B %Y /
time-alt = %H:%M:%S

format-foreground= ${colors.fg1}

label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true

format-volume = <label-volume>
format-volume-underline = ${colors.yellow2}

label-volume =vol %percentage%%
label-volume-foreground = ${colors.yellow2}

label-muted = vol mute 
label-muted-foreground = ${colors.fg4}


[module/mic]
type = custom/script
tail = true
interval = 0
format-foreground = ${colors.blue2}

exec = ~/.config/polybar/mic-tog.sh &
click-left = pulseaudio-ctl mute-input
; click-right = pavucontrol -t 4 &


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98 

label-charging = plugged %percentage%%
label-full = bat %percentage%%
label-discharging = bat %percentage%% 

format-charging = <label-charging>
format-charging-foreground = ${colors.green2}

format-discharging = <label-discharging> 
format-discharging-foreground = ${colors.red}

format-full = <label-full>
format-full-foreground = ${colors.aqua2}


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = temp <label>
format-foreground = ${colors.aqua2}
format-warn = temp <label-warn>
format-warn-foreground = ${colors.aqua2}

label = %temperature-c%
label-warn = %temperature-c%


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
