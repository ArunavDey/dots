[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = temp <label>
format-foreground = ${colors.aqua2}
format-warn = temp <label-warn>
format-warn-foreground = ${colors.aqua2}

label = %temperature-c%
label-warn = %temperature-c%


