[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-foreground = ${colors.fg0}
label-mode-background = ${colors.bg0}
label-mode-padding = 1

label-focused = %index%
label-focused-foreground = ${colors.fg0}
label-focused-background = ${colors.bg0} 
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.fg4}
label-unfocused-background = ${colors.bg0}
label-unfocused-padding = 1

label-visible = %index%
label-visible-foreground = ${colors.fg0}
label-visible-background = ${colors.bg0}
label-visible-padding = 1

label-urgent = !%index%
label-urgent-foreground = ${colors.red2}
label-urgent-background = ${colors.bg0}
label-urgent-padding = 1

[module/gpu]
type = custom/script
exec = ~/.config/polybar/system-nvidia-smi.sh
interval = 2

[module/cpu]
type = internal/cpu
interval = 2
; format-prefix = " "
format-prefix = "cpu "
format-prefix-foreground = ${colors.yellow2}
format-foreground = ${colors.yellow2}
; label = %percentage:2%%
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
; format-prefix = " "
format-prefix = "mem "
format-prefix-foreground = ${colors.blue2}
format-foreground = ${colors.blue2}
label = %percentage_used%%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =fs %percentage_used%%
label-mounted-foreground = ${colors.orange2}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.fg4}


[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-packetloss = !<label-connected>
format-packetloss-foreground = ${colors.red2}

format-connected = <label-connected>
; label-connected =    %essid%     
; label-connected =       
label-connected = wlan
label-connected-foreground = ${colors.blue2}

; format-disconnected =   
format-disconnected =
format-disconnected-foreground = ${colors.fg4}
; label-disconnected =   
; label-disconnected-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = eno1
interval = 3.0
format-connected-prefix-foreground = ${colors.aqua2}
; label-connected =   
label-connected = eth  
format-connected-foreground = ${colors.aqua2}
; label-disconnected =   
label-disconnected =   
format-disconnected-foreground = ${colors.fg4}

[module/date]
type = internal/date
interval = 1.0

date = %A / %d %B /
time = %H:%M

date-alt = %A / %d %B %Y /
time-alt = %H:%M:%S

format-foreground= ${colors.fg1}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true

format-volume = <label-volume>
format-volume-underline = ${colors.yellow2}
; label-volume =  %percentage%
label-volume =vol %percentage%%
label-volume-foreground = ${colors.yellow2}

label-muted = vol mute 
label-muted-foreground = ${colors.yellow2}

[module/mic]
type = custom/script
tail = true
interval = 0
format-foreground = ${colors.blue2}

exec = ~/.config/polybar/mic-tog.sh &
click-left = pulseaudio-ctl mute-input
; click-right = pavucontrol -t 4 &



