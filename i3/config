############################
##### GENERAL SETTINGS #####
############################
font pango: JetBrainsMono Nerd Font 10
set $mod Mod4
focus_follows_mouse no
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec_always --no-startup-id dunst &
exec_always --no-startup-id picom &
exec_always --no-startup-id feh --bg-fill ~/pictures/wallpapers/planet-with.rings.jpg &
exec_always --no-startup-id xinput set-prop 13 288 1 &
exec_always --no-startup-id xinput set-prop 13 293 1 &
exec_always --no-startup-id ~/.config/polybar/scripts/bars/minimal_dark.sh &
exec_always --no-startup-id ~/.config/i3/scripts/set_display.sh &


#####################
###### KEYBINDS #####
#####################
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Return exec kitty
bindsym $mod+Shift+p exec polybar-msg cmd toggle
bindsym $mod+b exec brave
bindsym $mod+Shift+b exec brave --incognito
bindsym $mod+f exec thunar
bindsym $mod+c exec calculator
bindsym $mod+space exec ~/.config/i3/scripts/rundmenu.sh
bindsym $mod+Tab exec ~/.config/i3/scripts/runrofi.sh
bindsym $mod+Print exec ~/.config/i3/scripts/screenshot.sh
bindsym $mod+Shift+Print exec ~/.config/i3/scripts/windowshot.sh
bindsym $mod+Shift+x exec ~/.config/i3/scripts/runi3lock.sh
bindsym $mod+p exec ~/.config/polybar/scripts/power-profile-toggle.sh
bindsym $mod+r mode "resize"
bindsym $mod+Shift+e mode "[l]ogout [r]eboot [s]hutdown [h]ibernate"

###########################
###### MEDIA CONTROLS #####
###########################
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


######################################
###### i3 MOVEMENTS AND COMMANDS #####
######################################
floating_modifier $mod
bindsym $mod+Shift+q      kill
bindsym $mod+h            focus left
bindsym $mod+j            focus down
bindsym $mod+k            focus up
bindsym $mod+l            focus right
bindsym $mod+Shift+h      move left
bindsym $mod+Shift+j      move down
bindsym $mod+Shift+k      move up
bindsym $mod+Shift+l      move right
bindsym $mod+u            split h
bindsym $mod+y            split v
bindsym $mod+Shift+f      fullscreen toggle
bindsym $mod+s layout     stacking
bindsym $mod+w layout     tabbed
bindsym $mod+e layout     toggle split
bindsym $mod+Shift+space  floating toggle
bindsym $mod+a focus      parent
bindsym $mod+d focus      child

